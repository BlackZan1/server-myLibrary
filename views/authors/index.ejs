<h2>Search author</h2>

<form action="/authors" method='GET'>
    <label for="name">Name</label>

    <input type="text" name="name" placeholder="Search" value="<%= searchedOptions.name %>">

    <button type="submit">
        Search
    </button>
</form>

<% authors.forEach(author => { %>
    <div><%= author.name %></div>
<% }) %>