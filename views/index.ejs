<div>
    <h1 style="text-align: center;">There are many books from many authors</h1>

    <div style="display: flex; align-items: center;">
        <% books.forEach( book => { %>
            <div style="display: flex; flex-direction: column; align-items: center; margin: 15px;">
                <p><%= book.title %></p>
    
                <img width='100' height="150" src="<%= book.coverImagePath %>" alt="Loading...">
            </div>
        <% }) %>
    </div>
</div>